<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.testcamera.PhotoFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_photo">
        <action
            android:id="@+id/action_mainFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            />
        <action
            android:id="@+id/action_mainFragment_to_videoFragment"
            app:destination="@id/videoFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.example.testcamera.VideoFragment"
        android:label="fragment_video"
        tools:layout="@layout/fragment_video">
        <action
            android:id="@+id/action_videoFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            />
        <action
            android:id="@+id/action_videoFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.testcamera.gallery.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_galleryFragment_to_viewerFragment"
            app:destination="@id/mediaViewFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/mediaViewFragment"
        android:name="com.example.testcamera.gallery.MediaViewerFragment"
        android:label="fragment_media_viewer"
        tools:layout="@layout/fragment_media_viewer">
        <action
            android:id="@+id/action_viewerFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            />
        <argument
            android:name="path"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>